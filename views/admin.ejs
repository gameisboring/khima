    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"
      integrity="sha256-xKeoJ50pzbUGkpQxDYHD7o7hxe0LaOGeguUidbq6vis="
      crossorigin="anonymous"
    ></script>

    <title><%= title %></title>
    <style>
      #mainSection {
        width: 100%;
      }

      .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48;
      }
    </style>
  </head>

  <body class="bg-gray-800 leading-normal tracking-normal">
    <div id="mask"></div>
    <main>
      <div class="flex flex-col md:flex-row">
        <section id="mainSection">
          <div
            id="main"
            class="main-content flex-1 bg-gray-100 pb-24 md:pb-5 min-h-screen"
          >
            <div class="heading">
              <div class="p-4 shadow text-2xl text-gray-900">
                <h1 class="font-bold pl-2">관리자 페이지</h1>
              </div>
            </div>

            <div class="flex flex-wrap" id="overview">
              <div class="w-full md:w-1/3 p-6" id="views">
                <div class="rounded-lg shadow-xl p-5">
                  <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                      <div class="rounded-full py-3 px-4 bg-gray-50">
                        <span
                          class="material-symbols-outlined text-gray-900 text-4xl"
                        >
                          person_search
                        </span>
                      </div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                      <h2 class="font-bold">총 조회수</h2>
                      <p class="font-bold text-3xl" id="hit-count"></p>
                    </div>
                  </div>
                </div>
                <!--/Metric Card-->
              </div>
              <div class="w-full md:w-1/3 p-6" id="reservations">
                <!--Metric Card-->
                <div class="rounded-lg shadow-xl p-5">
                  <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                      <div class="rounded-full py-3 px-4 bg-gray-50">
                        <span
                          class="material-symbols-outlined text-gray-900 text-4xl"
                        >
                          library_books
                        </span>
                      </div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                      <h2 class="font-bold uppercase">총 등록인원</h2>
                      <p class="font-bold text-3xl" id="user-count"></p>
                    </div>
                  </div>
                </div>
                <!--/Metric Card-->
              </div>
              <div class="w-full md:w-1/3 p-6" id="uptime">
                <!--Metric Card-->
                <div class="rounded-lg shadow-xl p-5">
                  <div class="flex flex-row items-center">
                    <div class="flex-shrink pr-4">
                      <div class="rounded-full py-3 px-4 bg-gray-50">
                        <span
                          class="material-symbols-outlined text-gray-900 text-4xl"
                        >
                          timer
                        </span>
                      </div>
                    </div>
                    <div class="flex-1 text-right md:text-center">
                      <h2 class="font-bold uppercase">업타임</h2>
                      <p class="font-bold text-3xl" id="start-time"></p>
                    </div>
                  </div>
                </div>
                <!--/Metric Card-->
              </div>
            </div>

            <div style="height: 500px; padding: 1.5rem">
              <canvas id="myChart"></canvas>
            </div>
            <div class="flex flex-row flex-wrap flex-grow mt-2" id="users">
              <div class="w-full p-6">
                <div class="bg-white border-transparent rounded-lg shadow-xl">
                  <div
                    class="flex justify-between px-6 rounded-tl-lg rounded-tr-lg heading"
                  >
                    <h2 class="font-bold uppercase text-gray-900 py-3">
                      참가자목록
                    </h2>
                    <div class="flex">
                      <a
                        href="/admin/book/download"
                        class="bg-red-300 my-2 px-2 rounded-md font-bold text-white shadow-md hover:bg-red-500 transition-all duration-150 uppercase flex items-center"
                      >
                        csv 다운로드
                        <span class="material-symbols-outlined">
                          file_download
                        </span>
                      </a>
                    </div>
                  </div>
                  <div class="flex flex-col">
                    <div class="-my-2 overflow-x-auto">
                      <div class="py-2 align-middle inline-block min-w-full">
                        <div
                          class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg"
                        >
                          <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-50">
                              <tr>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  이름
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  면허번호
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  신청일자
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  최초접속시간
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  최종접속시간
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 w-1/12 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  총 시청시간
                                </th>
                                <th
                                  scope="col"
                                  class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"
                                >
                                  권한
                                </th>
                              </tr>
                            </thead>
                            <tbody
                              id="booked-body"
                              class="bg-white divide-y divide-gray-200"
                            ></tbody>
                          </table>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
  </body>
  <script src="js/admin.js"></script>
</html>
